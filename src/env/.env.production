# ============================================================================
# INFRASTRUCTURE + SECRETS + DANGEROUS CONFIGURATION
# ============================================================================
# IMPORTANT: This file contains sensitive configuration and security-critical
# settings. Review each variable carefully for production deployment.
# ============================================================================

# ----------------------------------------------------------------------------
# SERVER CONFIGURATION
# ----------------------------------------------------------------------------

# Port on which the application will run
PORT=

# ----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# ----------------------------------------------------------------------------

# PostgreSQL connection settings
DB_USER=
DB_HOST=
DB_NAME=
DB_PASSWORD=
DB_PORT=

# ----------------------------------------------------------------------------
# JWT AUTHENTICATION SECRETS
# ----------------------------------------------------------------------------

# Secret key for signing access tokens (use strong random string in production)
ACCESS_TOKEN_SECRET=

# Secret key for signing refresh tokens (use different strong random string)
REFRESH_TOKEN_SECRET=

# ----------------------------------------------------------------------------
# EMAIL SERVICE CONFIGURATION (Gmail/Google OAuth)
# ----------------------------------------------------------------------------

# Gmail account email address used for sending emails
GMAIL_USER=

# Google OAuth Client ID for Gmail API authentication
GOOGLE_CLIENT_ID=

# Google OAuth Client Secret for Gmail API authentication
GOOGLE_CLIENT_SECRET=

# Google OAuth Refresh Token for Gmail API authentication
GOOGLE_REFRESH_TOKEN=

# ----------------------------------------------------------------------------
# ADMIN CREDENTIALS
# ----------------------------------------------------------------------------

# Admin username for Basic Authentication on admin endpoints
ADMIN_LOGIN=

# Admin password for Basic Authentication on admin endpoints
ADMIN_PASSWORD=

# ----------------------------------------------------------------------------
# ENVIRONMENT TYPE
# ----------------------------------------------------------------------------

# Current environment mode: development, staging, production
NODE_ENV=

# ----------------------------------------------------------------------------
# API DOCUMENTATION SETTINGS
# ----------------------------------------------------------------------------

# Enable Swagger UI documentation endpoint (set to false for production)
IS_SWAGGER_ENABLED=

# Enable static Swagger documentation download (set to false for production)
IS_SWAGGER_STATIC_DOWNLOAD_NEEDED=

# ----------------------------------------------------------------------------
# DANGEROUS SETTINGS - SECURITY CRITICAL
# ----------------------------------------------------------------------------

# DANGER: Testing module provides endpoints for testing purposes (e.g., DELETE ALL DATA)
# Must be FALSE for production environments. Only enable in local/test environments.
INCLUDE_TESTING_MODULE=

# Send detailed error information (message, URL, stack trace) to client on INTERNAL_SERVER_ERROR
# Set to FALSE for production to avoid information disclosure
SEND_INTERNAL_SERVER_ERROR_DETAILS=

# DANGER: Auto-confirm all registered users without email verification
# Must be FALSE for production. Only use TRUE for local testing.
IS_USER_AUTOMATICALLY_CONFIRMED=

# DANGER: Auto-synchronize database schema with code schema (can cause data loss)
# Must be FALSE for production. Only safe for local development or early development stages.
DB_AUTOSYNC=

# Use production-format domain error responses (cleaner, less verbose)
# Set to TRUE for production environments
IS_PRODUCTION_DOMAIN_ERROR_RESPONSE_FORMAT=

# ----------------------------------------------------------------------------
# APPLICATION/DOMAIN SETTINGS - TOKEN & CODE EXPIRATION
# ----------------------------------------------------------------------------

# Access token expiration time (e.g., "10m", "1h", "7d")
ACCESS_TOKEN_EXPIRE_IN=10s

# Refresh token expiration time (e.g., "30d", "90d")
REFRESH_TOKEN_EXPIRE_IN=20s

# Email confirmation code expiration time (e.g., "24h", "3d")
EMAIL_CONFIRMATION_CODE_EXPIRE_IN=

# Password recovery code expiration time (e.g., "1h", "24h")
PASSWORD_RECOVERY_CODE_EXPIRE_IN=

# ----------------------------------------------------------------------------
# RATE LIMITING CONFIGURATION
# ----------------------------------------------------------------------------

# Rate limit time window in milliseconds (e.g., 10000 = 10 seconds)
RATE_LIMIT_TTL_MS=

# Maximum number of requests allowed per time window
RATE_LIMIT_MAX_REQUESTS=

# ----------------------------------------------------------------------------
# COOKIE CONFIGURATION
# ----------------------------------------------------------------------------

# Enable HttpOnly flag for cookies (security best practice)
COOKIE_HTTP_ONLY=

# Enable Secure flag for cookies (requires HTTPS)
COOKIE_SECURE=

# Cookie path (usually "/api/auth" for authentication cookies)
COOKIE_PATH=

#
COOKIE_DOMAIN=

# Cookie max age in milliseconds (should match refresh token expiration)
COOKIE_MAX_AGE_MS=

# Cookie SameSite attribute ('strict', 'lax', or 'none')
# Use 'none' for cross-origin requests (requires COOKIE_SECURE=true)
COOKIE_SAME_SITE=

# ----------------------------------------------------------------------------
# EMAIL NOTIFICATION CONFIGURATION
# ----------------------------------------------------------------------------

# Frontend application base URL (used in email links)
# Example: https://myapp.com or https://staging.myapp.com
FRONTEND_URL=

# Path to email confirmation page (appended to FRONTEND_URL)
EMAIL_CONFIRMATION_PATH=

# Path to password recovery page (appended to FRONTEND_URL)
PASSWORD_RECOVERY_PATH=

# OAuth access token time-to-live in milliseconds (default: 3600000 = 1 hour)
OAUTH_TOKEN_TTL_MS=

# Buffer time in milliseconds before token expiration to trigger refresh (default: 300000 = 5 minutes)
OAUTH_REFRESH_BUFFER_MS=

# Google OAuth redirect URL for token generation
GOOGLE_OAUTH_REDIRECT_URL=

